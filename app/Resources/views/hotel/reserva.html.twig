{% extends 'base.html.twig' %}

{% block title %}Reserve Ahora{% endblock %}

{% block descripcion %}Reserve ahora en Hotel Boutique Sutherland House de Valparaíso para disfrutar plenamente su descanso.{% endblock %}

{% block body %}
    {{ render(controller('AppBundle:Hotel:carousel', {'pagina' : constant('AppBundle\\Entity\\PageCarousel::RESERVA')})) }}
    {{ include('includes/_reserva-paxer.html.twig', {'noShow' : true }) }}
    <div class="container">
        <div class="row text-center">
            <h1>Hotel Sutherland - Reserva en línea</h1>
        </div>
        {{ include('includes/_flash_messages.html.twig') }}
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-calendar-plus-o"></i> Reserve Ahora en linea</div>
            <div class="panel-body">
                <div class="paxer-widget-calendar"></div>
            </div>
        </div>

        {{ include('includes/_contacto.html.twig') }}

        <div class="panel panel-default">
            <div class="panel-heading">O llena y envia el siguiente formulario</div>
            <div class="panel-body">
                {{ render(controller('AppBundle:Hotel:contactoForm',{'origen' : path('hotel_reserve')})) }}
            </div>
        </div>

        {{ include(':includes:_condiciones_pago.html.twig') }}
    </div>
{% endblock %}