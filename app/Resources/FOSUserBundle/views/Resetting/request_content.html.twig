{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row text-center">
        <h1>Hotel Sutherland - Recuperar Contraseña</h1>
    </div>
    <div class="row">
        <div class="col-sm-5 center-block" style="float: none;">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="form-group">
                    <label for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-send"></i> Recuperar Contraseña</button>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6">
                        <a class="btn btn-danger btn-large btn-block" href="{{ path('homepage') }}"><i class="fa fa-times"></i> Cancelar</a>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <a class="btn btn-info btn-large btn-block" href="{{ path('fos_user_security_login') }}"><i class="fa fa-lock"></i> Volver Inicio Sesión</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>