{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="row text-center">
        <h1>Hotel Sutherland - Inicio de Sesi칩n</h1>
    </div>
    <div class="row">
        <div class="col-sm-5 center-block" style="float: none;">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <fieldset>
                    <div class="form-group">
                        <label for="username">Nombre Usuario / Email</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Contrase침a</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />&nbsp;
                        <label for="remember_me">Recordarme</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-large btn-block" id="_submit" name="_submit">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> Iniciar Sesi칩n
                        </button>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6">
                            <a class="btn btn-warning btn-large btn-block" href="{{ path('fos_user_registration_register') }}"><i class="fa fa-edit"></i> Registrate</a>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <a class="btn btn-info btn-large btn-block" href="{{ path('fos_user_resetting_request') }}"><i class="fa fa-lock"></i> Olvido su Contrase침a</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>